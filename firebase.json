{
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "appAssociation": "AUTO",
        "headers": [
            {
                "source": "/.well-known/apple-app-site-association",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            },
            {
                "source": "/apple-app-site-association",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": ".well-known/apple-app-site-association",
                "destination": "/.well-known/apple-app-site-association"
            },
            {
                "source": "*",
                "dynamicLinks": true
            }
        ]
    }
}
